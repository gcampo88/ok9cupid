<h1>Sign up!</h1>
<h3>Your new best friend is only a few clicks away.</h3>

<form class="user-signup form" action="<%=users_url%>" method="post">
  <%= auth_token %>
  <label>Name<br>
    <input type="text" name="user[name]" value="<%=@user.name%>">
  </label><br>

  <label>Zip Code<br>
    <input type="text" name="user[zipcode]" value="<%=@user.zipcode%>">
  </label><br>

  <label>Email Address<br>
    <input type="text" name="user[email]" value="<%=@user.email%>">
  </label><br>

  <label>Password<br>
    <input type="password" name="user[password]">
  </label><br>

  <input type="submit" value="Create account!">

</form><br><br>


<%= button_to "Existing account? Sign in!", new_session_url, method: :get %>
