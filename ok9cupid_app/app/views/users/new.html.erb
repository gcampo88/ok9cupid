<%= button_to "Existing account? Sign in!", new_session_url, method: :get %>

<header class="signup-header">
  <h1>Sign up!</h1>
  <h3>Your new best friend is only a few clicks away.</h3>
</header>
<br><br>

<img src="/assets/ok9cupid-logo" alt="logo" class="logo"/>

<form class="user-signup form group" action="<%=users_url%>" method="post">
  <%= auth_token %>
  <ul>
    <li><label>Name
      <input type="text" name="user[name]" value="<%=@user.name%>">
    </label></li>

    <li><label>  Zip Code
      <input type="text" name="user[zipcode]" value="<%=@user.zipcode%>">
    <li></label></li> <br>

    <li><label>Email Address
      <input type="text" name="user[email]" value="<%=@user.email%>">
    </label></li>

    <li><label>  Password
      <input type="password" name="user[password]">
    </label></li>

  </ul>

  <input type="submit" value="Create account!">

</form>
